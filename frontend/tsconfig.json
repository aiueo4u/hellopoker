{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "jsx": "react",
    "baseUrl": "javascript",
    "rootDir": "javascript",
    "moduleResolution": "node",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "hooks/*": ["hooks/*"],
      "scenes/*": ["scenes/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"]
    },
    "outDir": "./dist"
  },
  "include": ["javascript"],
  "exclude": ["node_modules"]
}
